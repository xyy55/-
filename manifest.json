{
  "manifest_version": 2,
  "name": "工具合集",
  "description": "自己常用的工具合集",
  "version": "1.7",
  "browser_action": {
    "default_title": "请勿用于商业用途，欢迎赞助。",
    "default_popup": "hello.html"
  },
  "icons": {
    "19": "img/icon_19.png",
    "38": "img/icon_38.png",
    "128": "img/icon_128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.zhihu.com/question/*",
        "https://zhuanlan.zhihu.com/p/*"
      ],
      "js": [
        "zhihu.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://pan.baidu.com/share/init*",
        "http://pan.baidu.com/share/init*",
        "https://pan.baidu.com/wap/init*",
        "http://pan.baidu.com/wap/init*"
      ],
      "js": [
        "jquery-3.2.1.min.js",
        "get_code.js"
      ],
      "run_at": "document_start"
    },
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "exclude_matches": [
        "https://pan.baidu.com/share/init*",
        "http://pan.baidu.com/share/init*",
        "*://*.bilibili.com/*"
      ],
      "js": [
        "jquery-3.2.1.min.js",
        "findAndReplaceDOMText.js",
        "test_link.js"
      ],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "cookies",
    "tabs",
    "<all_urls>",
    "downloads",
    "notifications",
    "storage"
  ],
  "background": {
    "scripts": [
      "jquery-3.2.1.min.js",
      "snap.svg-min.js",
      "background.js"
    ],
    "persistent": false
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}